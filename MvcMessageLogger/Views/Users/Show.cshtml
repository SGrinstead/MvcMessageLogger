@model User

<h1 class="text-info">@Model.Username's Profile</h1>
<a href="/users/edit/@Model.Id">Edit User Information</a> <span> | </span> <a class="text-danger" href="/users/delete/@Model.Id">Delete User</a>
<p>---------------------------------------------</p>

<h3 class="text-info">@Model.Username's Messages</h3>
<p>---------------------------------------</p>

@foreach (var message in Model.Messages)
{
	<div class="message">
		<h6 class="text-info">@Model.Name</h6>
		<p>@message.Content</p>
		<p class="text-light">@message.CreatedAt.ToLocalTime().ToString()</p>
		<a class="text-success" href="/users/@Model.Id/messages/edit/@message.Id">Edit Message</a> <span> | </span> <a class="text-danger" href="/users/@Model.Id/messages/delete/@message.Id">Delete Message</a>
	</div>
	<p>---------------------------------------</p>
}

@if (Model.Messages.Count == 0)
{
	<h5>You haven't written any messages yet</h5>
}

<form method="get" action="/users/@Model.Id/messages/new">
	<button class="btn btn-success" type="submit">Add a Message</button>
</form>