@model IEnumerable<User>
@{
	var hourWithMostMessagesPair = (KeyValuePair<int, int>) ViewData["HourWithMostMessages"];
	var mostCommonWordPair = (KeyValuePair<string, int>) ViewData["MostCommonWord"];
}

<h1 class="text-info">Site Statistics</h1>
<p>---------------------------------------------------</p>

<h4 class="text-info">Hour With The Most Messages</h4>
<p>The hour with the most messages is <span class="text-warning">@hourWithMostMessagesPair.Key</span> with @hourWithMostMessagesPair.Value Messages written</p>

<h4 class="text-info">Most Common Word</h4>
<p>The most commonly used word is <span class="text-warning">@mostCommonWordPair.Key</span> with @mostCommonWordPair.Value uses</p>

<h4 class="text-info">Users Ordered By Number Of Messages</h4>

<ol>
@foreach(var user in Model.OrderByDescending(u => u.Messages.Count))
{
	if (user.Messages.Count == 1)
	{
		<li>@user.Username has written @user.Messages.Count message</li>
	}
	else
	{
		<li>@user.Username has written @user.Messages.Count messages</li>
	}		
}
</ol>